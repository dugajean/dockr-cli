{
    "main": "bin/dockr",
    "output": "bin/dockr.phar",
    "git-version": "package_version",
    "stub": true,
    "chmod": "0755",
    "directories": ["src"],
    "files": [
        "LICENSE",
        "config/pouch.php"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": ["test", "tests"],
            "in": "vendor"
        },
        {
            "name": "*.stub",
            "in": "stubs",
            "ignoreDotFiles": false
        }
    ]
}
