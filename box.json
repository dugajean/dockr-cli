{
    "git-version": "package_version",
    "directories": ["src"],
    "exclude-composer-files": false,
    "files": [
        "LICENSE",
        "config/pouch.php"
    ],
    "finder": [
        {
            "name": "*.php",
            "exclude": ["test", "tests"],
            "in": "vendor"
        },
        {
            "name": "*.stub",
            "in": "stubs",
            "ignoreDotFiles": false
        }
    ]
}
